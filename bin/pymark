#!/bin/bash

set -e

cat << UNTIL
<!DOCTYPE HTML>
<html>
<head>
    <link rel="stylesheet" href="style.css">
</head>
<body>
UNTIL

python \
    -m markdown \
    -o html5 \
    -e utf-8 \
    -x markdown.extensions.toc \
    -x markdown.extensions.smarty \
    -x markdown.extensions.footnotes \
    -x markdown.extensions.tables \
    $@

cat << UNTIL
</body>
</html>
UNTIL
