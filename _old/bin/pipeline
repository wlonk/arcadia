#!/bin/bash

set -e

FILENAME="${1%.md}"
TITLE="$2"
AUTHOR="$3"
FORMAT="$4"
BUILD_DIR=build
mkdir -p $BUILD_DIR
cp style.css $BUILD_DIR

./bin/pymark "$FILENAME".md > $BUILD_DIR/"$FILENAME".html

ebook-convert $BUILD_DIR/"$FILENAME".html $BUILD_DIR/"$FILENAME"."$FORMAT" --title="$TITLE" --authors="$AUTHOR"
